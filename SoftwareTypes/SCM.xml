<SoftwareType>
    <Name>SCM</Name>
    <Category>Programming</Category>
    <Description>Software Configuration Management is a piece of software to track changes in source code and allow a complete version history to be stored.</Description>
    <Unlock>1986</Unlock>
    <Random>0.78</Random>
    <Popularity>0.6</Popularity>
    <Retention>0.85</Retention>
    <Iterative>0.4</Iterative>
    <OSSpecific>TRUE</OSSpecific>
    <OSLimit>Computer</OSLimit>
    <OneClient>FALSE</OneClient>
    <InHouse>TRUE</InHouse>
    <NameGenerator>SCM</NameGenerator>
    <IdealPrice>70</IdealPrice>
    <Features>
        <Feature Forced="TRUE">
            <Name>Revision history</Name>
            <Category>System</Category>
            <Description>Basic revision control for the SCM.</Description>
            <DevTime>3</DevTime>
            <Innovation>1</Innovation>
			<Usability>1</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
            <Dependency Software="Operating System">File management</Dependency>
        </Feature>
        <Feature Vital="TRUE">
            <Name>Cheap copies</Name>
            <Category>Algorithm</Category>
            <Description>Only the difference between revisions is stored, not the whole code.</Description>
            <DevTime>2</DevTime>
            <Innovation>2</Innovation>
			<Usability>0</Usability>
			<Stability>0</Stability>
			<CodeArt>1</CodeArt>
            <Dependency Software="SCM">Revision history</Dependency>
        </Feature>
        <Feature>
            <Name>Blame</Name>
            <Category>Algorithm</Category>
            <Description>Each line of code can be attributed (or "blamed") to a particular user.</Description>
            <DevTime>3</DevTime>
            <Innovation>2</Innovation>
			<Usability>1</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
            <Dependency Software="SCM">Revision history</Dependency>
        </Feature>
        <Feature Vital="TRUE">
            <Name>Diff</Name>
            <Category>Algorithm</Category>
            <Description>Two versions can be "diffed" to quickly show what their differences are.</Description>
            <DevTime>2</DevTime>
            <Innovation>1</Innovation>
			<Usability>0</Usability>
			<Stability>0</Stability>
			<CodeArt>1</CodeArt>
        </Feature>
        <Feature From="Diff">
            <Name>Patching</Name>
            <Category>System</Category>
            <Description>A diff can generate a patch which can be shared to easily apply similar changes.</Description>
            <DevTime>2</DevTime>
            <Innovation>1</Innovation>
			<Usability>1</Usability>
			<Stability>0</Stability>
			<CodeArt>1</CodeArt>
        </Feature>
        <Feature Vital="TRUE">
            <Name>Branching</Name>
            <Category>System</Category>
            <Description>Code can exist on multiple branches at once, and be merged back together.</Description>
            <DevTime>2</DevTime>
            <Innovation>2</Innovation>
			<Usability>1</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
        </Feature>
        <Feature>
            <Name>Distributed SCM</Name>
            <Unlock>1998</Unlock>
            <Category>Network</Category>
            <Description>Different versions of code can exist in different places across a network or the Internet.</Description>
            <DevTime>4</DevTime>
            <Innovation>2</Innovation>
			<Usability>2</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
        </Feature>
        <Feature From="Distributed SCM">
            <Name>Forking</Name>
            <Unlock>2000</Unlock>
            <Category>System</Category>
            <Description>A SCM repository can be "forked" to create a totally new version.</Description>
            <DevTime>2</DevTime>
            <Innovation>1</Innovation>
			<Usability>1</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
        </Feature>
        <Feature Vital="TRUE">
            <Name>Pull requests</Name>
            <Unlock>2004</Unlock>
            <Category>Algorithm</Category>
            <Description>A pull request can be issued to show code changes and help developers merge code together.</Description>
            <DevTime>3</DevTime>
            <Innovation>2</Innovation>
			<Usability>1</Usability>
			<Stability>1</Stability>
			<CodeArt>1</CodeArt>
            <Dependency Software="SCM">Branching</Dependency>
        </Feature>
        <Feature Vital="TRUE">
            <Name>Cloud repositories</Name>
            <Unlock>2008</Unlock>
            <Category>Network</Category>
            <Description>Repositories can exist online, saving the need for a local server.</Description>
            <DevTime>5</DevTime>
            <Innovation>3</Innovation>
			<Usability>2</Usability>
			<Stability>2</Stability>
			<CodeArt>1</CodeArt>
            <Dependency Software="SCM">Distributed SCM</Dependency>
            <Dependency Software="Website">File uploads</Dependency>
        </Feature>
    </Features>
</SoftwareType>